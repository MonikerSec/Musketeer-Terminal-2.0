# Initializing screens
WindowManager:
    SplashScreen:
    LoginScreen:
    SignupScreen:
    HomeScreen:
    ReportBugScreen:
    EmailScreen:
    AboutScreen:
    CalendarScreen:

# Setting defaults 
<MDLabel>:
    font_name: 'fonts/SugarSnow'

<MDTextField>:
    font_size: sp(20)
    width: dp(300)

<MDRoundFlatButton>:
    width: dp(60)
    height: dp(80)
    font_size: sp(25)

<MDCard>
    md_bg_color: 255/255, 221/255, 0/255
<SwiperItem@MDSwiperItem>:
    FitImage:
        source: 'images/musk-term-logo.png'
<SplashScreen>:
    name: 'splash'
# Screen for logging in
<LoginScreen>:
    name: 'login'
# Screen for signing up
<SignupScreen>:
    name: 'signup'
# Home Screen
<HomeScreen>:
    name: 'home'

# Send Emails 
<EmailScreen>:
    name: 'email'

# Report Bugs
<ReportBugScreen>:
    name: 'bug'

# See about info
<AboutScreen>:
    name: 'about'

# View The Calendar
<CalendarScreen>:
    name: 'calendar'